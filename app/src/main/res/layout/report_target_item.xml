<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

<!--     android:background="?android:attr/activatedBackgroundIndicator"
 -->
    <TextView
        android:id="@+id/tJudul"
        android:textAllCaps="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="Test DOn" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:typeface="monospace"
            android:text="Target"
            android:textColor="#125c00"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tValueTarget"
            android:layout_toStartOf="@+id/tValueTarget" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/tValueTarget"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:typeface="sans" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tKey2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:typeface="monospace"
            android:text="@string/target_transactions_text"
            android:textColor="#125c00"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tValueActual"
            android:layout_toStartOf="@+id/tValueActual" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/tValueActual"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tKey22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:typeface="monospace"
            android:text="@string/target_achievement_text"
            android:textColor="#125c00"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tPencapaian"
            android:layout_toStartOf="@+id/tPencapaian" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/tPencapaian"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tKey26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:typeface="monospace"
            android:text="@string/target_balance_text"
            android:textColor="#125c00"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/tBalance"
            android:layout_toStartOf="@+id/tBalance" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/tBalance"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:typeface="sans" />
    </RelativeLayout>

</LinearLayout>