<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:fillViewport="true"
    android:gravity="center"
    android:background="#fff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:nestedScrollingEnabled="true"
>


        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="20dp">

                <!--<AnalogClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/analogClock"
                    android:layout_gravity="center_horizontal"
                    android:foreground="#53ff1e"
                    android:foregroundTint="#7bff48"
                    android:backgroundTint="#7bff48"
                    android:layout_span="2" />-->

                <AnalogClock
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/analogClock"
                    android:layout_gravity="center"
                    android:layout_span="2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textClock"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/start_label_work_start"
                    android:id="@+id/textView3"
                    android:typeface="monospace"
                    android:layout_weight="2"
                    android:paddingRight="25dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/tIn"
                    android:textColor="#424242"
                    android:typeface="monospace"
                    android:layout_weight="2"
                    android:padding="7dp"
                    android:gravity="left" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/start_label_work_end"
                    android:id="@+id/textView"
                    android:typeface="monospace"
                    android:layout_weight="2"
                    android:paddingRight="25dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/tOut"
                    android:textColor="#424242"
                    android:typeface="monospace"
                    android:layout_weight="2"
                    android:padding="7dp"
                    android:gravity="left" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:paddingTop="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_button_work_start"
                    android:id="@+id/button"
                    android:focusable="false"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:gravity="center|center_vertical"
                    android:background="@drawable/button_bg"
                    android:layout_span="2" />


            </TableRow>


        </TableLayout>

</LinearLayout>
