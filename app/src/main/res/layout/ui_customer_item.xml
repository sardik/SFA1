<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tCustomerNumbLeft"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:text="CUSTNUMLEFT" />

        <TextView
            android:id="@+id/tCustomerNumbRight"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:text="CUSTNUMBRIGHT" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tCustomerName"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:text="CUSTNAME|" />

    </LinearLayout>

    <TextView
        android:id="@+id/tCustomerNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:visibility="gone"
        android:textColor="#22b24c" />

    <TextView
        android:id="@+id/tCustomerAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="#343434"
        android:text="CUSTADD"
        android:typeface="monospace"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tCustomerCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:text="Mobile: "
        android:textColor="#5d5d5d"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tCustomerAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:text="Mobile: "
        android:textColor="#5d5d5d"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:text="Mobile: "
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tStatusX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:text="Mobile: "
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tJarak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/tStatus"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:typeface="monospace"
        android:text="About 0 Meters"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tCallStatus"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Mobile: "
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tDescription"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Mobile: "
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView4"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/anonymous"
        app:civ_border_width="1dp"
        app:civ_border_color="#22b24c"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>