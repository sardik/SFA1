<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/tProductName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad notepad"
        android:textColor="#040404"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/list_image" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tProductNumber" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tAlias" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/richeese"
        android:layout_gravity="center"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tProductName"
        android:layout_toRightOf="@+id/tProductName"
        android:id="@+id/linearLayout"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:id="@+id/tQtyLarge"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:id="@+id/tQtyMedium"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:id="@+id/tQtySmall"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRT"
            android:id="@+id/tUomLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX"
            android:id="@+id/tUomMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PCS"
            android:id="@+id/tUomSmall" />
    </LinearLayout>

    <!--
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_image"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:src="@drawable/richeese"
            app:civ_border_width="1dp"
            app:civ_border_color="#20a200"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PCS"
        android:visibility="gone"
        android:id="@+id/tUom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:id="@+id/tPrice"
        android:visibility="gone"
        android:layout_below="@+id/tProductName"
        android:layout_alignLeft="@+id/tProductName"
        android:layout_alignStart="@+id/tProductName" />


</RelativeLayout>